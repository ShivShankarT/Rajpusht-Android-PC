<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FormField">
        <attr name="ff_label" format="string" />
        <attr name="ff_label_text_appearance" format="reference" />
        <attr name="ff_hint" format="string" />
        <attr name="ff_selections" format="reference" />
        <attr name="ff_show_divider" format="boolean" />
        <attr name="ff_required" format="boolean" />
        <attr name="ff_chbox_none_pos" format="integer" />
        <attr name="ff_maxLength" format="integer" />
        <attr name="ff_input_type" format="enum">
            <enum name="textPersonName" value="0" />
            <enum name="phone_no" value="1" />
            <enum name="number" value="2" />
            <enum name="numberDecimal" value="3" />
            <enum name="password" value="4" />
        </attr>

        <attr name="ff_measurement_type" format="enum">
            <enum name="weight" value="0" />
            <enum name="length" value="1" />
        </attr>
    </declare-styleable>

</resources>